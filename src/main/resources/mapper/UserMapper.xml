    <select id="findUserByLoginName" resultMap="BaseResultMap">
      select DISTINCT su.* from sys_user su
        LEFT JOIN sys_dept sd on su.dept_id = sd.dept_id
        LEFT JOIN sys_user_role sur on su.user_id = sur.user_id
        LEFT JOIN sys_role sr on su.user_id = sur.user_id
        LEFT JOIN sys_role_menu  srm on srm.role_id = sr.role_id
        LEFT JOIN sys_menu sm on srm.menu_id = sm.menu_id
        left JOIN sys_user_post sup on sup.user_id = su.user_id
        LEFT JOIN sys_post sp on sp.post_id = sup.post_id
        WHERE su.login_name = #{loginName}
  </select>
